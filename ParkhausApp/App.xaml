<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ParkhausApp"
             x:Class="ParkhausApp.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Color -->
            <Color x:Key="TileBackground">#2B2B2B</Color>
            <Color x:Key="TileText">#FFFFFF</Color>
            <Color x:Key="PageTextSecondary">#C9C9C9</Color>


            <!-- Titel-->
                <Style x:Key="TitelLabel" TargetType="Label">
                <Setter Property="FontSize" Value="26"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TileText}"/>
            </Style>


            <Style x:Key="SubtitleLabel" TargetType="Label">
                <Setter Property="FontSize" Value="13 "/>
                <Setter Property="TextColor" Value="{StaticResource PageTextSecondary}"/>
            </Style>


            <Style x:Key="GarageTileButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource TileBackground}"/>
                <Setter Property="TextColor" Value="{StaticResource TileText}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="14"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="LineBreakMode" Value="WordWrap"/>
                <Setter Property="HeightRequest" Value="140"/>
            </Style>


            <Style x:Key="StatusLabel" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource PageTextSecondary}"/>
            </Style>


            <Style x:Key="SActionButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource TileBackground}"/>
                <Setter Property="TextColor" Value="{StaticResource TileText}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="14"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="CardFrame" TargetType="Frame">
                <Setter Property="BackgroundColor" Value="{StaticResource TileBackground}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="16"/>
            </Style>


            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource TileBackground}"/>
                <Setter Property="TextColor" Value="{StaticResource TileText}"/>
                <Setter Property="CornerRadius" Value="16"/>
                <Setter Property="Padding" Value="14"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <!-- Trennlinie -->
                <Style x:Key="Divider" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1"/>
                <Setter Property="Opacity" Value="0.25"/>
                <Setter Property="Color" Value="{StaticResource TileText}"/>
            </Style>


            <Style x:Key="SectionLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="TextColor" Value="{StaticResource PageTextSecondary}"/>
            </Style>

            <Style x:Key="ValueLabel" TargetType="Label">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="{StaticResource TileText}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
