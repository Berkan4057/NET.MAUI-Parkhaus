<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkhausApp.Barrier"
             Title="">
    <VerticalStackLayout Padding="20" Spacing="14">
        <Label Text ="Parkhaus Einfahrt " Style="{StaticResource TitelLabel}"/>
        <Label Text ="Aktueller Status" Style="{StaticResource SubtitleLabel}"/>

        <Frame Style="{StaticResource CardFrame}">
        <VerticalStackLayout Spacing="8">

        <Label Text="Status" Style="{StaticResource SubtitleLabel}"/>

                <Label x:Name="barrier" Text ="Schranke geschlossen" Style="{StaticResource StatusLabel}"/>
                
                </VerticalStackLayout>
        </Frame>

        <Button Text="Ticket lösen und Schranke öffnen" 
                            Style="{StaticResource ActionButton}"
                            Clicked="OpenBarrier"/>
    </VerticalStackLayout>
</ContentPage>