<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkhausApp.Dashboard"
             Title="">
    <VerticalStackLayout Padding="20" Spacing="14">
        <Label Text="Dashboard" Style="{StaticResource TitelLabel}"/>

        <Frame Style="{StaticResource CardFrame}">
            <VerticalStackLayout Spacing="12">
            <!-- Abschnitt 1 -->
            <Label Text="Lieve" Style="{StaticResource SectionLabel}"/>

            <Label x:Name="CurrentParkTimeLabel" Text="" Style="{StaticResource ValueLabel}"/>


            <Label x:Name="CurrentPriceLabel" Text="" Style="{StaticResource ValueLabel}" />

            <BoxView Style="{StaticResource Divider}" />

            <!-- Abschnitt 2 -->
            <Label x:Name="TicketNumberLabel" Text="Ticket nummer" Style="{StaticResource ValueLabel}"/>

            <Label x:Name="EntryTimeLabel" Text="Eintrittszeit" Style="{StaticResource ValueLabel}"/>


            <Label x:Name="IsPaidLabel" Text="Ist bezahlt" Style="{StaticResource ValueLabel}"/>

                </VerticalStackLayout>
        </Frame>

        <Button Text="Bezahlen und Schranke Ã¶ffnen"  
                Style="{StaticResource ActionButton}" 
                Clicked="PayButton_Clicked" />
                
    </VerticalStackLayout>
</ContentPage>