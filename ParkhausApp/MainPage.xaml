<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkhausApp.MainPage"
             Title="" >


    <ScrollView>
        
            <VerticalStackLayout Padding="20" Spacing="14">

                <Label Text="Parkhäuser in der Nähe" Style="{StaticResource TitelLabel}" />
            <Label Text="Wähle eine Einfahrt" Style="{StaticResource SubtitleLabel}" />

            <Grid ColumnDefinitions="*,*,*" ColumnSpacing = "12" RowDefinitions ="Auto">
                
                <Button x:Name="ButtonKLH" Grid.Column="0" Style="{StaticResource GarageTileButton}" Clicked="ButtonChose"/>


                <Button x:Name="ButtonBibliothek" Grid.Column="1" Style="{StaticResource GarageTileButton}" Clicked="ButtonChose"/>

                <Button x:Name="ButtonGYM" Grid.Column="2" Style="{StaticResource GarageTileButton}"  Clicked="ButtonChose"/>


            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
